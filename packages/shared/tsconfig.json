{
	"compilerOptions": {
		"allowJs": false,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"module": "esnext",
		"lib": ["esnext", "dom"],
		"moduleResolution": "bundler"
	},
	"exclude": [
		"../cadmium/pkg",
		"node_modules",
	]
}
