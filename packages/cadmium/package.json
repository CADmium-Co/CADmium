{
  "name": "cadmium",
  "collaborators": [
    "Matt Ferraro"
  ],
  "description": "A CAD program written in Rust with a JS front end",
  "scripts": {
    "dev": "pnpm build:dev && onchange 'src/**/*.rs' -- pnpm build:dev",
    "build:dev": "cross-env cargo check && wasm-pack build --no-pack --target web --dev",
    "build": "wasm-pack build --target web --no-pack",
    "clean": "rimraf target pkg node_modules",
    "test": "cargo test",
    "postinstall": "pnpm build"
  },
  "version": "0.1.0",
  "license": "Elastic License 2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattferraro/cadmium"
  },
  "files": [
    "pkg/cadmium_bg.wasm",
    "pkg/cadmium.js",
    "pkg/cadmium.d.ts"
  ],
  "module": "pkg/cadmium.js",
  "types": "pkg/cadmium.d.ts",
  "type": "module",
  "devDependencies": {
    "onchange": "^7.1.0"
  }
}
