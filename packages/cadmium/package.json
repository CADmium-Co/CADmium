{
  "name": "cadmium",
  "collaborators": [
    "Matt Ferraro"
  ],
  "description": "A CAD program written in Rust with a JS front end",
  "scripts": {
    "dev": "pnpm run build:dev; onchange 'src/**/*.rs' -- pnpm run build:dev",
    "build": "wasm-pack build --target web --no-pack && pnpm run build:typeguards",
    "build:dev": "cargo check && wasm-pack build --no-pack --target web --dev",
    "build:typeguards": "ts-auto-guard --project ../shared/tsconfig.json --export-all pkg/cadmium.d.ts",
    "clean": "rm -rf target pkg node_modules",
    "test": "cargo test",
    "postinstall": "pnpm build"
  },
  "version": "0.1.0",
  "license": "Elastic License 2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattferraro/cadmium"
  },
  "files": [
    "pkg/cadmium_bg.wasm",
    "pkg/cadmium.js",
    "pkg/cadmium.d.ts",
    "pkg/cadmium.guard.ts"
  ],
  "module": "pkg/cadmium.js",
  "types": "pkg/cadmium.d.ts",
  "type": "module",
  "devDependencies": {
    "onchange": "^7.1.0",
    "ts-auto-guard": "^4.2.0"
  }
}
