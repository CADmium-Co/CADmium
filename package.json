{
  "private": true,
  "scripts": {
    "build": "turbo run build --cache-dir=.turbo --no-daemon",
    "dev": "turbo run dev --no-daemon",
    "preview": "turbo run preview --no-daemon",
    "test": "turbo run test --no-daemon",
    "test:unit": "turbo run test:unit --no-daemon",
    "test:e2e": "turbo run test:e2e --no-daemon",
    "test:rust": "cargo test",
    "clean": "turbo run clean --no-daemon",
    "lint": "turbo run lint --no-daemon",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,json,svelte,md}\""
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.7",
    "turbo": "^1.13.2"
  },
  "engines": {
    "node": ">=20.13.1",
    "pnpm": ">=9.1.0"
  }
}
